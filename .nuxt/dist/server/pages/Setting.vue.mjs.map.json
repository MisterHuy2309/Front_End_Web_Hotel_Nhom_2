{"file":"Setting.vue.mjs","mappings":";;;;;;;;;AAmBE,UAAM,QAAQ,cAAe;AAG7B,UAAM,aAAa,SAAS,MAAM,MAAM,UAAU;;;;;;;;;;;;;;;","names":[],"sources":["../../../../pages/Setting.vue"],"sourcesContent":["<template>\r\n    <div :class=\"{'dark': theme.isDarkMode}\" class=\"settings-container\">\r\n      <h1>Cài đặt</h1>\r\n      <div>\r\n        <label for=\"darkModeSwitch\">Chế độ tối:</label>\r\n        <input\r\n          id=\"darkModeSwitch\"\r\n          type=\"checkbox\"\r\n          v-model=\"isDarkMode\"   \r\n          @change=\"toggleDarkMode\" />\r\n      </div>\r\n    </div>\r\n  </template>\r\n  \r\n  <script setup>\r\n  import { useThemeStore } from '@/store/DarkMode'\r\n  import { computed } from 'vue'\r\n  \r\n  // Sử dụng store để lấy trạng thái dark mode\r\n  const theme = useThemeStore()\r\n  \r\n  // Liên kết trạng thái isDarkMode từ store\r\n  const isDarkMode = computed(() => theme.isDarkMode)\r\n  \r\n  // Toggle chế độ sáng/tối khi người dùng thay đổi\r\n  const toggleDarkMode = () => {\r\n    theme.toggleDarkMode()  // Cập nhật trạng thái trong store\r\n  }\r\n  </script>\r\n  \r\n  <style scoped>\r\n  .settings-container {\r\n    padding: 20px;\r\n    text-align: center;\r\n  }\r\n  \r\n  h1 {\r\n    font-size: 2rem;\r\n    margin-bottom: 20px;\r\n  }\r\n  \r\n  label {\r\n    font-size: 1.2rem;\r\n  }\r\n  \r\n  input[type=\"checkbox\"] {\r\n    margin-left: 10px;\r\n  }\r\n  \r\n  .dark {\r\n    background-color: #333;\r\n    color: white;\r\n  }\r\n  \r\n  </style>\r\n  "],"version":3}